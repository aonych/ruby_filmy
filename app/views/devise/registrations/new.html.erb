<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Rejestracja</h2>

    <div class="form-group">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
      :defaults => { :input_html => { :class => "form-control" } }) do |f| %>
        <%= f.error_notification %>
      <%= f.input :email, required: true, autofocus: true, class: "form-control", placeholder: "Email" %>
      <%= f.input :password, required: true, class: "form-control", placeholder: "Hasło" %>
      <%= f.input :password_confirmation, required: true, class: "form-control", placeholder: "Powtórz hasło" %>
    </div>
       <%= f.button :submit, "Zarejestruj się", :class => "btn btn-lg btn-primary btn-block" %>
      <% end %>
      
  </div>
</div>
