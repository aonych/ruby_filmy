<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Logowanie</h2>

    <div class="form-group">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      :defaults => { :input_html => { :class => "form-control" } }) do |f| %>
      <%= f.input :email, required: false, autofocus: true, class: "form-control", placeholder: "Email" %>
      <%= f.input :password, required: false, class: "form-control", placeholder: "HasÅ‚o" %>
    </div>
      <%= f.button :submit, "Zaloguj", :class => "btn btn-lg btn-primary btn-block" %>
      <% end %>

  </div>
</div>
